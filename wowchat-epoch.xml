<?xml version="1.0"?>
<Container version="2">
  <Name>wowchat-epoch</Name>
  <Repository>doctorbeefy/wowchat-epoch</Repository>
  <Registry>https://hub.docker.com/r/doctorbeefy/wowchat-epoch</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/bennylavaa/wowchat-epoch/issues</Support>
  <Project>https://github.com/bennylavaa/wowchat-epoch</Project>
  <Overview>A selfhosted chatbot for communication between Project Epoch and Discord.</Overview>
  <Category>Game:Other</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/bennylavaa/wowchat-epoch/main/wowchat-epoch.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/bennylavaa/wowchat-epoch/blob/main/images/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <Requires/>
  <Config Name="Discord Bot Token" Target="DISCORD_TOKEN" Default="" Mode="" Description="Discord bot token for integration" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Version Number" Target="VERSION_NUMBER" Default="" Mode="" Description="Version number of the application" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Realm Build" Target="REALM_BUILD" Default="" Mode="" Description="Realm build version" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Game Build" Target="GAME_BUILD" Default="" Mode="" Description="Game build version" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Realmlist URL" Target="REALMLIST_URL" Default="" Mode="" Description="URL for the realmlist" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="Realm Name" Target="REALM_NAME" Default="" Mode="" Description="Name of the game realm" Type="Variable" Display="always" Required="false" Mask="false"></Config>
  <Config Name="WoW Account" Target="WOW_ACCOUNT" Default="" Mode="" Description="World of Warcraft account name" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="WoW Password" Target="WOW_PASSWORD" Default="" Mode="" Description="World of Warcraft account password" Type="Variable" Display="always" Required="true" Mask="true"></Config>
  <Config Name="WoW Character" Target="WOW_CHARACTER" Default="" Mode="" Description="Character name in World of Warcraft" Type="Variable" Display="always" Required="true" Mask="false"></Config>
  <Config Name="Configuration File" Target="CONF_FILE" Default="wowchat.conf" Mode="" Description="Path to the configuration file" Type="Variable" Display="advanced" Required="false" Mask="false"></Config>
</Container>
